@page "/configuration"


<PageTitle>Vaccinated - Configuration</PageTitle>

<h1 class="mt-10 ml-2 text-3xl font-black text-gray-600">Configuration</h1>
<hr class="border-gray-300">
<span class="oi oi-moon absolute top-4 right-5 text-2xl hover:text-blue-900 transition-colors duration-500"></span>
<span
    class="oi oi-sun absolute top-4 right-5 text-2xl hover:text-amber-600 transition-colors duration-500 hidden"></span>

<input @bind="provincia">
<button @onclick="addProvince">Agregar provincia</button>
<br>
<input @bind="vacuna">
<button @onclick="addVaccine">Agregar vacuna</button>

@code {
    private string value_province = "provincia";
    private string value_vacinne = "vacuna";

    private string provincia { get; set; }
    private string vacuna { get; set; }

    public async void addVaccine()
    {

        using (var db = new vaccinationsContext())
        {
            db.Add(new Vaccine
            {
                Vaccine1 = vacuna
            });

            await db.SaveChangesAsync();
        }

    }
    public async void addProvince()
    {

        using (var db = new vaccinationsContext())
        {
            db.Add(new Province
            {
                Province1 = provincia
            });

            await db.SaveChangesAsync();
        }

    }

}